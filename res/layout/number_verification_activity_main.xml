<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_clear" >

    <RelativeLayout
        android:id="@+id/timer_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:background="@drawable/spam_shape" >

            <TextView
                android:id="@+id/timer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#1ac6ff"
                android:textSize="26sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/enter_phno_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:paddingLeft="90dp"
        android:text="Verify your number !"
        android:textColor="@color/yellow"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/country_code_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/enter_phno_tv"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:background="@color/blue"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/yellow"
        android:padding="5dp"
        android:text="+91" />

    <EditText
        android:id="@+id/ph_et"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/country_code_tv"
        android:layout_alignBottom="@+id/country_code_tv"
        android:layout_toRightOf="@+id/country_code_tv"
        android:background="@color/blue"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/yellow"
        android:padding="5dp"
        android:text="8447035110" >

        <requestFocus />
    </EditText>

 <LinearLayout
     android:id="@+id/verifyNumberLinerarLayout"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/country_code_tv"
     android:layout_below="@+id/country_code_tv"
     android:layout_marginTop="39dp"
     android:orientation="horizontal" >

     <TextView
         android:id="@+id/verifyNumberTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Check Now"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/red"
         android:textSize="30dp"
         android:textStyle="bold" />
 </LinearLayout>

</RelativeLayout>